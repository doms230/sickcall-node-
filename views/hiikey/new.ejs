    <h1>Create an Event <small>Only confirmed guests can see the event location, messages, and guest list.</small></h1>
    </br>

    <h3> Event Image <small class="astericks">*</small></h3>
    <img src="/public/images/logo.png" id="image"  alt="Upload Event Image " class="img-thumbnail" width="100" height="150">

    </br>
    </br>

    <input type="file" id="newEventImage" />

    <h3>Title <small class="astericks">*</small></h3>
    <input id="title" type="title" class="form-control" placeholder="Make it Short">

    </br>

    <h3>Address <small class="astericks">*</small></h3>
    <input id="address" type="text" class="form-control" placeholder="Event location">

    <h3>Description</h3>
    <textarea id="description" placeholder="Event details, band links, etc." class="form-control" rows="5"></textarea>

   <!-- <input placeholder="start date" id="date" type="text" class="form-control">

    <input placeholder="start time" id="time" type="text" class="form-control"> -->

    </br>

    <h3>Starts <small class="astericks">*</small></h3>

    <form class="form-inline">

        <div class="form-group" >
            <label class="sr-only" for="exampleInputEmail3">Start Date</label>
            <input class="form-control" id="startDate" placeholder="Start Date">
        </div>
        <div class="form-group">
            <label class="sr-only" for="exampleInputPassword3">Start Time</label>
            <input class="form-control " id="startTime" placeholder="Start Time">
        </div>

    </form>

    <h3>Ends <small class="astericks">*</small></h3>

    <form class="form-inline">

        <div class="form-group">
            <label class="sr-only" for="exampleInputEmail3">Start Date</label>
            <input class="form-control" id="endDate" placeholder="End Date">
        </div>

        <div class="form-group">
            <label class="sr-only" for="exampleInputPassword3">Start Time</label>
            <input class="form-control" id="endTime" placeholder="End Time">
        </div>
    </form>

    </br>
    </br>
    </br>
    <button id="submitButton" class="btn btn-default" type="submit" >Create Event</button>
    </br>
    </br>
    </br>

    <!-- Modal if user isn't logged in -->
    <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Sign In / Sign Up to Create Event</h4>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-pills">
                        <li href="#" id="signupButton" role="presentation" class="active"><a>Sign Up</a></li>
                        <li href="#" id="signinButton" role="presentation"><a>Sign In</a></li>
                    </ul>

                    <div class="container-fluid" id="signin" hidden="yes"  >
                        <form  class="form-signin" >
                            <h3 class="form-signin-heading"> Sign In</h3>
                            <input type="text" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
                        </form>
                        <button  id="signinAction" class="btn btn-lg btn-default btn-block" type="submit">Sign in</button>

                    </div>

                    <div class="container-fluid" id="signup"  >
                        <form  class="form-signin">
                            <h3 class="form-signin-heading">Sign Up</h3>
                            <input type="text" id="signupUsername" class="form-control" placeholder="Username" required autofocus>
                            <input type="email" id="signupEmail" class="form-control" placeholder="Email" required autofocus>
                            <input type="password" id="signupPassword" class="form-control" placeholder="Password" required>
                        </form>
                        <button id="signupAction" class="btn btn-lg btn-default btn-block" type="submit">Sign up</button>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

