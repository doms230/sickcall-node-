                            <input type="text" id="inputName" class="form-control" placeholder="Name" required autofocus>
                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="text" id="inputNumber" class="form-control" placeholder="Phone Number" required>
                        </form>

                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button id="updateInfo" class="btn btn-lg btn-default btn-block" type="submit">Update Info</button>
            </div>

        </div>
    </div>
</div>

